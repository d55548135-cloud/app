# ===============================
# EditorConfig is awesome
# https://editorconfig.org
# ===============================

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python — строго PEP8
[*.py]
indent_size = 4

[*.js]
indent_size = 2

[*.ts]
indent_size = 2

# HTML / CSS / SCSS
[*.html]
indent_size = 2

[*.css]
indent_size = 2

[*.scss]
indent_size = 2

# JSON / YAML
[*.json]
indent_size = 2

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

# Markdown — не трогаем пробелы в конце (важно для форматирования)
[*.md]
trim_trailing_whitespace = false
